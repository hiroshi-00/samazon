<div class="w-50">
  <h1>商品登録</h1>
  
  <hr>

  <%= form_with model: @product, url: dashboard_products_path(@product), local: true do |f| %>
    <div class="form-inline mt-4 mb-4 row">
      <%= f.label "商品名", class: "col-2 d-flex justify-content-start" %>
      <%= f.text_field :name, class: "form-control col-8" %>
    </div>

    <div class="form-inline mt-4 mb-4 row">
      <%= f.label "価格", class: "col-2 d-flex justify-content-start" %>
      <%= f.text_field :price, class: "form-control col-8" %>
    </div>

    <div class="form-inline mt-4 mb-4 row">
      <%= f.label "カテゴリ", class: "col-2 d-flex justify-content-start" %>
      <%= f.select :category_id, Category.all.map { |category| [category.name, category.id] }, {}, class: "form-control" %>
    </div>
    
    <div class="form-inline mt-4 mb-4 row">
      <%= f.label "画像", class: "col-2 d-flex justify-content-start" %>
      <%= f.file_field :image, class: "img-fluid" %>
    </div>
  
    <div class="form-inline mt-4 mb-4 row">
      <%= f.label "オススメ?", class: "col-2 d-flex justify-content-start" %>
      <%= f.check_box :recommended_flag, class: "form-control col-1" %>
    </div>

    <div class="form-inline mt-4 mb-4 row">
      <%= f.label "送料", class: "col-2 d-flex justify-content-start" %>
      <%= f.check_box :carriage_flag, class: "form-control col-1" %>
    </div>

    <div class="form-inline mt-4 mb-4 row">
      <%= f.label "商品説明", class: "col-2 d-flex justify-content-start" %>
      <%= f.text_area :description, class: "form-control col-8", rows: "7" %>
    </div>

    <%= f.submit "商品作成", class: "w-25 btn samazon-submit-button" %>
  <% end %>

  <div class="mt-4"><%= link_to "商品一覧に戻る",  dashboard_products_path %></div>
</div>
