<div class="container  d-flex justify-content-center mt-3">
  <div class="w-75">
    <h1>お気に入り</h1>

    <hr>

    <div class="row">
      <% @favorites.each do |favorite| %>
      <div class="col-md-8 mt-2">
        <div class="d-inline-flex">
          <%= link_to product_path(favorite.product_id), class: "w-25" do %>
            <%= image_tag "/images/dummy.png", class: "img-fuild w-100" %>
          <% end %>
          <div class="container mt-3">
            <h5 class="w-100 samazon-favorite-item-text"><%= favorite.product.name %></h5>
            <h6 class="w-100samazon-favorite-item-text">￥<%= favorite.product.price %></h6>
          </div>
        </div>
      </div>
      <div class="col-md-2 d-flex align-items-center justify-content-end">
        <%= link_to product_path(favorite.product_id), class: "samazon-favorite-item-delete" do %>
          削除
        <% end %>
      </div>
      <div class="col-md-2 d-flex align-items-center justify-content-end">
        <%= form_with url: cart_create_users_path, local: true do |f| %>
          <%= f.hidden_field :product_id, value: favorite.product_id %>
          <%= f.hidden_field :name, value: favorite.product.name %>
          <%= f.hidden_field :price, value: favorite.product.price %>
          <%= f.hidden_field :quantity, value: 1 %>
          <%= f.submit "カートに追加", class: "btn samazon-submit-button w-100" do %>
            <i class="fas fa-shopping-cart"></i>
          <% end %>
        <% end %>
      </div>
      <% end %>
    </div>

    <hr>

  </div>
</div>